<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.sju.jee.mapper.DepartmentMapper">
    <resultMap id="BaseResultMap" type="cn.edu.sju.jee.model.Department">
        <id column="dept_id" property="deptId"/>
        <result column="dept_name" property="deptName"/>
        <result column="dept_desc" property="deptDesc"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryAll" resultMap="BaseResultMap">
        select * from department order by dept_id
    </select>
    
    <insert id="add" parameterType="cn.edu.sju.jee.model.Department">
        insert into department (dept_name, dept_desc, create_time, update_time)
        values(#{deptName}, #{deptDesc}, now(), now())
    </insert>
    
    <delete id="deleteById" parameterType="Integer">
        delete from department where dept_id=#{deptId}
    </delete>
    
    <select id="queryById" parameterType="Integer" resultMap="BaseResultMap">
        select * from department where dept_id=#{deptId}
    </select>
    
    <update id="update" parameterType="cn.edu.sju.jee.model.Department">
        update department set dept_name=#{deptName}, dept_desc=#{deptDesc}, update_time=now()
        where dept_id=#{deptId}
    </update>
</mapper> 